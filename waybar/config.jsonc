{
    "layer": "top",
    "position": "top",
    // "mode": "dock",
    "fixed-center": true,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "ipc": true,
    "spacing": 0,
    "height": 0,
    "margin-left": 5,
    "margin-right": 5,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
        "hyprland/submap"
    ],
    "modules-center": [
        "clock",
        "network",
        "mpris",
        "custom/weather",
        "tray"
    ],
    "modules-right": [
        "memory",
        "custom/temperature",
        // "temperature",
        "cpu",
        "custom/drives",
        "battery",
        "backlight",
        // "wireplumber",
        // "hyprland/language",
        "bluetooth",
        "pulseaudio",
        "pulseaudio#microphone"
    ],
    "hyprland/submap": {
        "format": "{}",
        "tooltip": false
    },
    "custom/temperature": {
        "tooltip" : true,
        "format" : "{}",
        "interval" : 1,
        "restart-interval": 1,
        "exec" : "~/.config/waybar/scripts/waybar-temp.sh",
        "return-type" : "json"
    },
    "hyprland/language": {
        "format": "Lang: {}",
        "keyboard-name": "at-translated-set-2-keyboard"
    },
    "memory": {
        "interval": 2,
        "format": "<span font='14' rise='0pt'>{icon}</span>{used:0.1f}G/{total:0.1f}G",
        "tooltip-format": "Used: {used:0.1f}G {percentage}%\nAvailable: {avail:0.1f}G\nTotal: {total:0.1f}G\nSWAP Used: {swapUsed:0.1f}G {swapPercentage}%\nSWAP Available: {swapAvail:0.1f}G\nSWAP Total: {swapTotal:0.1f}G"
    },
    "mpris": {
        "interval": 1,
        "format": "{player_icon}:{status_icon} {title}",
        "format-paused": "{player_icon}:{status_icon} <i>{title}</i>",
        "format-stopped": "{player_icon}:{status_icon}",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ",
            "spotify": "<span font='10' rise='0pt'>ÔÜº</span>"
        },
        "status-icons": {
            "paused": " ‚è∏",
            "playing": " ‚ñ∂",
            "stopped": "stopped"
        }
        ,
        "ignored-players": ["firefox", "chromium", "edge"]
    },
    "temperature": {
        //"thermal-zone": 1,
        "interval": 1,
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 74,
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "{icon}  {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "max-length": 7,
        "min-length": 7
    },
    "cpu": {
        "interval": 1,      
        "format": "{max_frequency:>}GHz | {usage}%",
        "on-click": "kitty -e htop --sort-key PERCENT_CPU",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },
    "network": {
        "interval": 1,
        // "interface": "wlp2s0", // (Optional) To force the use of this interface
        "on-click": "nm-connection-editor",
        "on-click-right": "killall nm-connection-editor",
        "format": "{ifname} {bandwidthUpBytes}Up {bandwidthDownBytes}Down",
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "<span font='15' rise='-3pt'>ÔÉÆ</span>  {bandwidthUpBytes:4}  <span font='15' rise='-3pt'>ÔÉ≠</span>  {bandwidthDownBytes:4}",
        "format-disconnected": "Disconnected ‚ö†",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ\n\n{bandwidthUpBytes}\tUp\n{bandwidthDownBytes}\tDown",
        "tooltip-format-wifi": "{essid} Ôá´\n\nSignal:\t({signalStrength}%){signaldBm}dBm\nFrequency:\t{frequency}MHz\nInterface:\t{ifname}\nIP:\t{ipaddr}/{cidr}\nMask:\t{netmask}\nGateway:\t{gwaddr}\n\n{bandwidthUpBytes}\tUp\n{bandwidthDownBytes}\tDown",
        "tooltip-format-ethernet": "Interface:\t{ifname}\nIP:\t{ipaddr}/{cidr}\nMask:\t{netmask}\nGateway:\t{gwaddr}\n\n{bandwidthUpBytes}\tUp\n{bandwidthDownBytes}\tDown",
        "tooltip-format-disconnected": "Disconnected ‚ö†"
    },

    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "on-click": "activate",
        "format": "{name}",
        "format-icons": {
          "urgent": "ÔÅ™",
          "active": "ÔÜí",
          "default": "ÔÑë"
        },
        "sort-by-number": true,
        "active-only": false
    },
    "custom/updates": {
        "exec": "(pacman -Qu ; trizen -Qua) | wc -l",
        "interval": 7200,
        "format": "Ôõô {}"
    },
   "custom/weather" : {
        "tooltip" : true,
        "format" : "{}",
        "interval" : 1,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json"
    },
    "custom/drives" : {
         "tooltip" : true,
         "format" : "{}",
         "interval" : 1,
         "exec" : "~/.config/waybar/scripts/waybar-drives.sh",
         "return-type" : "json",
         "escape": false
     },
    "tray": {
        "icon-size": 13,
        "spacing": 10
    },   
    "clock": {
        "interval" : 1,
        "format": "{:%A <span font='13' rise='-1pt'>Ôáö</span> %H:%M:%OS <span font='8' rise='1pt'>ÔÅ≥</span> %d/%m/%y}",
        "format-alt": "{:%A, %B %d, %Y (%R)} ÔóØ ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Ôóù", "Ôóû", "Ôóü"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["Ôñç", "Ôïπ", "Ôï∫", "Ôïª", "Ôïº", "ÔïΩ", "Ôïæ", "Ôïø", "ÔñÄ", "ÔñÅ", "Ôï∏"]
    },
    "pulseaudio": {
        "format": "<span font='14' rise='-1pt'>{icon}</span> {volume}%",
        "format-muted": "<span font='14' rise='-1pt'>Ôä§</span> Muted",
        "tooltip": true,
        "on-click": "pamixer -t",
        "on-click-middle": "pavucontrol -t 3",
        "on-click-right": "killall pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphones": "ÔÄ•",
            "handsfree": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["Ôä§", "Ôñç", "Ôïª", "Ôïº", "ÔïΩ", "Ôïæ", "Ôï∏"]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "<span font='10' rise='1pt'>Ô°´</span> {volume}%",
        "format-source-muted": "<span font='14' rise='1pt'>Ô°¨</span> Muted",
        "on-click": "pamixer --default-source -t",
        "on-click-middle": "pavucontrol -t 4",
        "on-click-right": "killall pavucontrol",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    "bluetooth": {
        // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
        "on-click": "blueman-manager",
        "on-click-right": "killall blueman-manager",
        "format": "Ôäî {status}",
        // "format-disabled": "Ôäî disabled", // an empty format will hide the module
        // "format-off": "Ôäî off", // an empty format will hide the module
        // "format-on": "Ôäî on", // an empty format will hide the module
        "format-connected": "Ôäî {num_connections}",
        // "format-connected": "Ôäî {device_alias}",
        //"format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%", // Show device connected with battery info
        //"format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "{controller_alias}\t{controller_address}\t{controller_address_type}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\t{controller_address_type}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-disabled": "{controller_alias}\t{controller_address}\t{controller_address_type}\n\n disabled",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}\t{device_address_type}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_address_type}\t{device_battery_percentage}%"
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "ÔÄ¶",
        "on-click": "helvum",
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    }
}
